<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/kbc_back"
    android:layout_height="match_parent"
    tools:context=".PlayScreen">


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="350dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>


    <Button
        android:id="@+id/bt_settings"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/setting_icon"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <!--    <ImageView-->
<!--        android:id="@+id/imgMiddleView"-->
<!--        android:layout_width="413dp"-->
<!--        android:layout_height="728dp"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/imgOuterView"-->
<!--        app:layout_constraintTop_toTopOf="@+id/imgOuterView"-->
<!--        app:layout_constraintVertical_bias="0.0"-->
<!--        app:srcCompat="@drawable/play_button_ring"-->
<!--        tools:layout_editor_absoluteX="-2dp" />-->


    <ImageView
        android:id="@+id/imgOuterView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/bt_playQuiz"
        android:layout_width="324dp"
        android:layout_height="318dp"
        android:background="@drawable/kbc2"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="SpeakableTextPresentCheck" />



</androidx.constraintlayout.widget.ConstraintLayout>