<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/que">

    <LinearLayout
        android:id="@+id/lyl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/questionNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColor="@color/black"
            android:background="@drawable/edittext_background" />


        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question will be here"
            android:background="@drawable/edittext_background"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="3dp"
            android:padding="15dp"/>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/optionsGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyl3"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/option1RadioButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Option 1"
            android:textColor="@color/black"
            android:background="@drawable/rounded_background"
            android:textSize="18sp"
            android:padding="12dp"/>

        <RadioButton
            android:id="@+id/option2RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 2"
            android:textColor="@color/black"
            android:background="@drawable/rounded_background"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:padding="12dp"/>

        <RadioButton
            android:id="@+id/option3RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 3"
            android:textColor="@color/black"
            android:background="@drawable/rounded_background"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:padding="12dp"/>

        <RadioButton
            android:id="@+id/option4RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_background"
            android:padding="12dp"
            android:text="Option 4"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </RadioGroup>


    <LinearLayout
        android:id="@+id/lyl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_below="@+id/optionsGroup1"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/previousButton"
            android:layout_width="145dp"
            android:layout_height="70dp"
            android:text="PREVIOUS"
            android:textSize="20dp"
            android:backgroundTint="@color/blue"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="145dp"
            android:layout_height="70dp"
            android:text="NEXT"
            android:textSize="20dp"
            android:backgroundTint="@color/blue"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_below="@+id/lyl1">

        <Button
            android:id="@+id/submitButton"
            android:layout_width="145dp"
            android:layout_height="70dp"
            android:text="Submit"
            android:textSize="20dp"
            android:backgroundTint="@color/green"
            android:layout_below="@id/optionsGroup"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/quitButton"
            android:layout_width="145dp"
            android:layout_height="70dp"
            android:text="Quit"
            android:textSize="20dp"
            android:backgroundTint="@color/red"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

</RelativeLayout>
