<!-- res/drawable/hexagonal_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <item>
        <shape>
            <solid android:color="#00bfff" /> <!-- Base color -->
        </shape>
    </item>

    <!-- Hexagonal Pattern -->
    <item>
        <bitmap
            android:src="@drawable/hexagon"
            android:tileMode="repeat"
            android:gravity="center"/>
    </item>
</layer-list>
